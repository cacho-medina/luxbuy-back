generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String      @id @unique @default(cuid())
  name        String?
  description String?
  stock       Int?
  price       Float?
  categories  Category    @relation(fields: [categoryId], references: [id])
  categoryId  String
  isDeleted   Boolean?    @default(false)
  orderItem   OrderItem[]
}

model Category {
  id        String    @id @unique @default(cuid())
  name      String?
  isDeleted Boolean?  @default(false)
  products  Product[]
}

model Profile {
  id      String @id @unique @default(cuid())
  image   String
  address String
  dni     String
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
}

model User {
  id        String   @id @unique @default(cuid())
  name      String?
  email     String?  @unique
  rol       Rol?     @default(USER)
  password  String?
  isActive  Boolean? @default(true)
  isDeleted Boolean? @default(false)
  orders    Order[]
  profile   Profile?
}

model Order {
  id          String      @id @unique @default(cuid())
  items       OrderItem[]
  totalAmount Float?
  user        User        @relation(fields: [userId], references: [id])
  userId      String
}

model OrderItem {
  id            String   @id @unique @default(cuid())
  product       Product? @relation(fields: [productId], references: [id])
  quantity      Int?
  partialAmount Float?
  order         Order?   @relation(fields: [orderId], references: [id])
  productId     String?
  orderId       String?
}

enum Rol {
  ADMIN
  USER
}
