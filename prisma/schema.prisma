generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Product {
  id          String    @id @unique @default(cuid())
  name        String
  description String?
  stock       Int
  price       Float
  category  Category @relation(fields: [categoryId], references: [id])
  categoryId String
  isDeleted   Boolean  @default(false)
  orderItems   OrderItem[]
}

model Category {
  id        String   @id @unique @default(cuid())
  name      String
  isDeleted Boolean  @default(false)
  products  Product[]
}

model User {
  id        String   @id @unique @default(cuid())
  Name      String?
  email     String?
  rol       Rol?    
  password  String?
  isActive  Boolean?
  isDeleted Boolean?
  Orders  Order[]
}

model Order {
  id          String     @id @unique @default(cuid())
  items       OrderItem[] 
  totalAmount Float
  user User? @relation(fields: [userId], references: [id]) //opcional, de esa manera un usuario no logueado puede hacer una compra
  userId String

}

model OrderItem {
  id            String   @id @unique @default(cuid())
  product       Product @relation(fields: [productId], references: [id])
  quantity      Int
  partialAmount Float
  order         Order   @relation(fields: [orderId], references: [id])
  productId     String
  orderId       String
}


enum Rol {
  ADMIN
  USER
}

